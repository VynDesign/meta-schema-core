{
    "compilerOptions": {
        "lib": [
            "es2017"
        ],
        "moduleResolution": "node",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "target": "es2017",
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true,
        "types": []
    },
    "include": ["src/*"],
    "exclude": [
        "node_modules",
        "dist",
        "**/test/**"
    ]
}
