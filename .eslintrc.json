{
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "google"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "semi": "off",
        "require-jsdoc": "off",
        "comma-dangle": "off",
        "indent": "off",
        "max-len": ["warn", 200],
        "arrow-parens": ["error", "as-needed"]
    }
}
